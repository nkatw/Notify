<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NotifyToolbar.Height"
    android:layout_marginTop="@dimen/NotifyToolbar.TopMargin"
    android:layout_marginBottom="@dimen/NotifyToolbar.BottomMargin"
    android:background="@color/notifyBackgroundColor"
    android:gravity="right"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/notify_main_page_admin_settings"
        style="@style/NotifyToolbarButton"
        android:layout_width="100px"
        android:layout_height="match_parent" />


    <ImageButton
        android:id="@+id/notify_main_page_search_button"
        style="@style/NotifyToolbarButton"
        android:layout_width="43px"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_search" />

    <ImageButton
        android:id="@+id/notify_main_page_radio_button"
        style="@style/NotifyToolbarButton"
        android:layout_width="49px"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_radio" />
</LinearLayout>