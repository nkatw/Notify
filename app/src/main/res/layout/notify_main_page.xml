<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notify_main_page"
    style="@style/NotifyRootLayoutStyle">

    <include layout="@layout/notify_custom_toolbar_layout" />

    <TextView
        android:id="@+id/recommended_songs_title"
        style="@style/NotifyMainPageTitle"
        android:text="@string/notify.mainPage.recommendedSongs.title" />

    <LinearLayout style="@style/NotifyMainPageBlock">

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_songs_imageView00"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_songs_textView00"
                style="@style/NotifyMainPageSongButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_songs_imageView01"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_songs_textView01"
                style="@style/NotifyMainPageSongButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_songs_imageView02"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_songs_textView02"
                style="@style/NotifyMainPageSongButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_songs_imageView03"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_songs_textView03"
                style="@style/NotifyMainPageSongButtonTitle" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/recommended_albums_title"
        style="@style/NotifyMainPageTitle"
        android:text="@string/notify.mainPage.recommendedAlbums.title" />

    <LinearLayout style="@style/NotifyMainPageBlock">

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_albums_imageView00"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_albums_textView00"
                style="@style/NotifyMainPageAlbumButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_albums_imageView01"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_albums_textView01"
                style="@style/NotifyMainPageAlbumButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_albums_imageView02"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_albums_textView02"
                style="@style/NotifyMainPageAlbumButtonTitle" />
        </RelativeLayout>

        <RelativeLayout style="@style/NotifyMainPageButtonStyle">

            <ImageView
                android:id="@+id/main_page_albums_imageView03"
                style="@style/NotifyMainPageCoverArt" />

            <TextView
                android:id="@+id/main_page_albums_textView03"
                style="@style/NotifyMainPageAlbumButtonTitle" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recommended_genres_layout"
        android:layout_width="match_parent"
        android:layout_height="62px"
        android:layout_marginBottom="50px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommended_genres_title"
            style="@style/NotifyMainPageTitle.genres"
            android:text="@string/notify.mainPage.recommendedGenres.title" />

        <ImageButton
            android:id="@+id/main_page_more_genres_button"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_alignParentRight="true"
            android:background="@color/notifyBackgroundColor"
            android:src="@drawable/ic_add" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="0"
            android:layout_column="0">

            <ImageView
                android:id="@+id/main_page_genres_imageView00"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_00" />

            <TextView
                android:id="@+id/main_page_genres_textView00"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="0"
            android:layout_column="1">

            <ImageView
                android:id="@+id/main_page_genres_imageView01"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_01" />

            <TextView
                android:id="@+id/main_page_genres_textView01"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="0"
            android:layout_column="2">

            <ImageView
                android:id="@+id/main_page_genres_imageView02"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_02" />

            <TextView
                android:id="@+id/main_page_genres_textView02"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="0"
            android:layout_column="3">

            <ImageView
                android:id="@+id/main_page_genres_imageView03"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_03" />

            <TextView
                android:id="@+id/main_page_genres_textView03"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="1"
            android:layout_column="0">

            <ImageView
                android:id="@+id/main_page_genres_imageView04"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_04" />

            <TextView
                android:id="@+id/main_page_genres_textView04"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="1"
            android:layout_column="1">

            <ImageView
                android:id="@+id/main_page_genres_imageView05"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_05" />

            <TextView
                android:id="@+id/main_page_genres_textView05"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="1"
            android:layout_column="2">

            <ImageView
                android:id="@+id/main_page_genres_imageView06"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_06" />

            <TextView
                android:id="@+id/main_page_genres_textView06"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

        <FrameLayout
            style="@style/NotifyMainPageGenresButton"
            android:layout_row="1"
            android:layout_column="3">

            <ImageView
                android:id="@+id/main_page_genres_imageView07"
                style="@style/NotifyMainPageGenresButtonImage"
                android:background="@drawable/bg_genre_button_07" />

            <TextView
                android:id="@+id/main_page_genres_textView07"
                style="@style/NotifyMainPageGenresButtonTitle" />
        </FrameLayout>

    </GridLayout>
</LinearLayout>