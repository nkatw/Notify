<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notifyBackgroundColor"
    android:orientation="horizontal"
    android:layout_marginVertical="140px">

    <ImageButton
        android:id="@+id/download_repeat"
        style="@style/NotifyPlayerPageMediaButton.repeatOrShuffle"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/icon_repeat" />

    <github.daneren2005.dsub.view.AutoRepeatButton
        android:id="@+id/download_previous"
        style="@style/NotifyPlayerPageMediaButton"
        android:layout_width="40px"
        android:layout_marginStart="242px"
        android:layout_marginEnd="212px"
        android:layout_toLeftOf="@+id/download_start"
        android:layout_toRightOf="@+id/download_repeat"
        android:src="@mipmap/icon_previous" />

    <github.daneren2005.dsub.view.AutoRepeatButton
        android:id="@+id/download_rewind"
        style="@style/NotifyPlayerPageMediaButton"
        android:layout_width="40px"
        android:layout_marginStart="242px"
        android:layout_marginEnd="212px"
        android:layout_toLeftOf="@+id/download_start"
        android:layout_toRightOf="@+id/download_repeat"
        android:src="@mipmap/icon_previous"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/download_pause"
        style="@style/NotifyPlayerPageMediaButton.start"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_pause_s"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/download_stop"
        style="@style/NotifyPlayerPageMediaButton.start"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_pause_s"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/download_start"
        style="@style/NotifyPlayerPageMediaButton.start"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_play_m" />

    <github.daneren2005.dsub.view.AutoRepeatButton
        android:id="@+id/download_fastforward"
        style="@style/NotifyPlayerPageMediaButton.next"
        android:layout_toLeftOf="@+id/download_shuffle"
        android:layout_toRightOf="@+id/download_start"
        android:src="@mipmap/icon_next"
        android:visibility="invisible" />

    <github.daneren2005.dsub.view.AutoRepeatButton
        android:id="@+id/download_next"
        style="@style/NotifyPlayerPageMediaButton.next"
        android:layout_toLeftOf="@+id/download_shuffle"
        android:layout_toRightOf="@+id/download_start"
        android:src="@mipmap/icon_next" />

    <ImageButton
        android:id="@+id/download_shuffle"
        style="@style/NotifyPlayerPageMediaButton.repeatOrShuffle"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_shuffle_n" />
</RelativeLayout>